@using SensiveBlogProject.EntityLayer.Concrete
@model Article
@{
    Layout = null;
}


<div class="container">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <br />
    <br />

    <form method="post">

        <input type="hidden" asp-for="ArticleId" />
        <label>Makale Başlığı</label>
        <input type="text" asp-for="Title" class="form-control" />
        <br />
        <label>Makale Açıklama</label>
        <input type="text" asp-for="Description" class="form-control" />
        <br />
        <label>Kapak Fotoğrafı Url</label>
        <input type="text" asp-for="CoverImageUrl" class="form-control" />
        <br />
        <label>Kategori</label>
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control" })
        <br />
        <label>Kullanıcı</label>
        @Html.DropDownListFor(x => x.AppUserId, (List<SelectListItem>)ViewBag.v2, new { @class = "form-control" })
        <br />
        <button type="submit" class="btn btn-success">Kaydet</button>
    </form>
</div>