@model List<Article>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /><br />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>Yazar</th>
            <th>Tarih</th>
            <th>Detaylar</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ArticleId</td>
                <td>@item.Title</td>
                <td>@item.Category.CategoryName</td>
                <td>@item.AppUser.Name @item.AppUser.Surname</td>
                <td>@item.CreatedDate.ToString("dd-MMM-yyyy")</td>
                <td><a href="/" class="btn btn-warning">Detaylar</a></td>
                <td><a href="/Article/DeleteArticle/@item.ArticleId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Article/UpdateArticle/@item.ArticleId" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="#" class="btn btn-primary">Yeni Makale Girişi</a>
</div>