@model Article
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <form method="post">
        <label>Makale Başlığı</label>
        <input type="type" asp-for="Title" class="form-control" />
        <br />
        <label>Makale Açıklaması</label>
        <input type="type" asp-for="Description" class="form-control" />
        <br />

        <label>Kapak Fotoğraf URL</label>
        <input type="type" asp-for="CoverImageUrl" class="form-control" />
        <br />
        <label>Kategori</label>
        @Html.DropDownListFor(x=>x.CategoryId, (List<SelectListItem>)ViewBag.v1, new {@class = "form-control"})
        @*     <br />
     <label>Kullanıcı</label>
         @Html.DropDownListFor(x=>x.AppUserId, (List<SelectListItem>)ViewBag.v1, new {@class = "form-control"}) *@
        <br />
        <button class="btn btn-info">Makaleyi Ekle</button>
    </form>
</div>