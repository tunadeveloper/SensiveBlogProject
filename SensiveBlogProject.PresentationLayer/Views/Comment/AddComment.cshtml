
<div class="comment-form">
    <h4>Leave a Reply</h4>
    <form method="post" asp-action="AddComment" asp-controller="Comment">
            <input type="hidden" name="ArticleId" value="@ViewBag.id" />
        <div class="form-group">
            <textarea class="form-control mb-10" rows="5" name="Detail" placeholder="Yorumunuzu buraya yazın..." onfocus="this.placeholder = ''" onblur="this.placeholder = 'Messege'" required=""></textarea>
        </div>
        <a href="#" class="button submit_btn">Gönder</a>
    </form>
</div>