@using SensiveBlogProject.EntityLayer.Concrete
@model List<Category>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />

    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil </th>
            <th>Güncelle </th>
            <th>Blog Listesi</th>
        </tr>
        @foreach (var item in Model)
        {
            
      
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-warning">Blog Listesi</a></td>
        </tr>
        }
    </table>
    <td><a href="/Category/CreateCategory" class="btn btn-info">Ekle</a></td>

</div>