@model Article

<!-- Kapak Fotoğrafı -->
<div class="cover" style="background-image: url('@Model.CoverImageUrl');"></div>

<!-- Blog Meta Bilgileri -->
<div class="meta">
    <span>Kategori: <strong></strong></span>
    <span>Yazar: <strong>John Doe</strong></span>
    <span>Oluşturma Tarihi: <strong>@Model.CreatedDate.ToString("dd-MMM-yyyy")</strong></span>
</div>

<!-- Blog Detayı -->
<div class="content">
    <h1>@Model.Title</h1>
    <p>@Model.Description</p>
</div>

