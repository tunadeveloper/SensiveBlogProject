@model UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}
<style>

</style>

<div class="midde_cont">
    <div class="container-fluid">
        <!-- row -->
        <div class="row column1">
            <div class="col-md-2"></div>
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h2>Yazar Profili</h2>
                        </div>
                    </div>
                    <div class="full price_table padding_infor_info">
                        <form method="post" enctype="multipart/form-data">
                        <div class="row">
                            <!-- user profile section -->
                            <!-- profile image -->
                            <div class="col-lg-12">
                                <div class="full dis_flex center_text">
                                    <div class="profile_img">
                                        <img width="180" class="rounded-circle" src="@Model.ImageUrl"/></div>

                                    <div class="profile_contant">
                                        <div class="contact_inner">
                                            <h3>@Model.Name @Model.Surname</h3>
                                            <p><strong>Kullanıcı Adınız: </strong> @Model.Username</p>
                                            <ul class="list-unstyled">
                                                <li><i class="fa fa-envelope-o"></i> : @Model.Email</li>                                               
                                            </ul>
                                        </div>
                                 
                                            <div class="contact_inner" style="margin-top: 20px !important;">
                                                <p><strong>Yazar Detayı</strong></p>
                                                <textarea rows="4" cols="3" asp-for="AuthorDetail" class="form-control" required></textarea>
                                          
                                            </div>
                                        
                                    </div>
                                </div>
                                <!-- profile contant section -->
                                <div class="full inner_elements margin_top_30">
                                    <div class="tab_style2">
                                        <div class="tabbar">
                                            <nav>
                                                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                                    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#recent_activity" role="tab" aria-selected="true">Bilgilerinizi Güncelleyin</a>
                                                </div>
                                            </nav>
                                            <div class="tab-content" id="nav-tabContent">
                                                <div class="tab-pane fade show active" id="recent_activity" role="tabpanel" aria-labelledby="nav-home-tab">
                                                    <div class="msg_list_main">
                                                      
                                                            <div class="container">
                                                                <label>Adınız</label>
                                                                <input type="text" asp-for="Name" class="form-control" required />
                                                                <br />
                                                                <label>Soyadınız</label>
                                                                <input type="text" asp-for="Surname" class="form-control" required />
                                                                <br />
                                                                <label>Kullanıcı Adınız</label>
                                                                <input type="text" asp-for="Username" class="form-control" required />
                                                                <br />
                                                                <label>Email Adresiniz</label>
                                                                <input type="email" asp-for="Email" class="form-control" required />
                                                                <br />
                                                                <label>Şifreniz</label>
                                                                <input type="text" asp-for="Password" class="form-control" required />
                                                                <br />
                                                                <div class="form-group">
                                                                    <label>Fotoğraf Seçin</label>
                                                                    <br />
                                                                    <input type="file" asp-for="Image" />
                                                                </div>
                                                                <button class="btn btn-info">Profili Güncelle</button>
                                                            </div>
                                                       
                                                    </div>
                                                </div>
 
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- end user profile section -->
                            </div>
                            
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
