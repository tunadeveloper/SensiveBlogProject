@model ArticleCategoryViewModel
@{
    ViewData["Title"] = "EditArticle";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}


<div class="midde_cont">
	<div class="container-fluid">
		<div class="row column1">
			<div class="col-md-2"></div>
			<div class="col-md-8">
				<div class="white_shd full">
					<div class="full price_table padding_infor_info">
						<div class="row">
							<div class="col-lg-12">
								<div class="full inner_elements">
									<div class="tab_style2">
										<div class="tabbar">
											<nav>
												<div class="nav nav-tabs" id="nav-tab" role="tablist">
													<a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#recent_activity" role="tab" aria-selected="true">Yazıyı Güncelle</a>
												</div>
											</nav>

											<form method="post" asp-action="EditArticle" asp-controller="Article">
												<input type="hidden" asp-for="Article.ArticleId"/>
												<div class="tab-content" id="nav-tabContent">
													<div class="tab-pane fade show active" id="recent_activity" role="tabpanel" aria-labelledby="nav-home-tab">
														<div class="msg_list_main">
															<label>Yazı Başlığı</label>
															<input type="text" asp-for="Article.Title" class="form-control" />
															<span class="text-danger" asp-validation-for="Article.Title"></span>
															<br />
															<label>Yazı Açıklaması</label>
															<textarea type="text" rows="20" cols="3" asp-for="Article.Description" class="form-control"></textarea>
															<span class="text-danger" asp-validation-for="Article.Description"></span>
															<br />
															<label>Kapak Fotoğraf Url</label>
															<input type="text" asp-for="Article.CoverImageUrl" class="form-control" />
															<span class="text-danger" asp-validation-for="Article.CoverImageUrl"></span>
															<br />
															<label>Kategori</label>
															@Html.DropDownListFor(x => x.Article.CategoryId, (List<SelectListItem>)Model.CategoryList, new { @class = "form-control" })
															<span class="text-danger" asp-validation-for="Article.CategoryId"></span>
															<br />
															<button type="submit" class="btn cur-p btn-success">Yazıyı Güncelle</button>
														</div>
													</div>
												</div>
											</form>

										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-2"></div>
			</div>
		</div>
	</div>
</div>

