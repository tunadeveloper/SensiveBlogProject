@model Article
@{
    ViewData["Title"] = "DetailArticle";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<div class="midde_cont">
	<div class="container-fluid">
		<div class="row column1">
			<div class="col-md-2"></div>
			<div class="col-md-8">
				<div class="white_shd full">
					<div class="full price_table padding_infor_info">
						<div class="row">
							<div class="col-lg-12">
								<div class="full inner_elements">
									<div class="tab_style2">
										<div class="tabbar">
											<nav>
												<div class="nav nav-tabs" id="nav-tab" role="tablist">
													<a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#recent_activity" role="tab" aria-selected="true">Yazı Detayları</a>
												</div>
											</nav>

												<div class="tab-content" id="nav-tabContent">
													<div class="tab-pane fade show active" id="recent_activity" role="tabpanel" aria-labelledby="nav-home-tab">
														<div class="msg_list_main">
															<label>Yazı Başlığı</label>
															<input type="text" asp-for="Title" class="form-control" readonly />
															<br />
															<label>Yazı Açıklaması</label>
															<textarea type="text" rows="20" cols="3" asp-for="Description" class="form-control" readonly></textarea>
															<br />
															<label>Kategori</label>
														<input type="text" asp-for="Category.CategoryName" class="form-control" readonly />
															<br />
															<a href="/DefaultArticle/ArticleDetail/@ViewBag.id" class="btn cur-p btn-primary">Sitede Gör</a>
														</div>
													</div>
												</div>
											
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-2"></div>
			</div>
		</div>
	</div>
</div>

