@model Comment
@{
    ViewData["Title"] = "EditComment";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<div class="midde_cont">
	<div class="container-fluid">
		<div class="row column1">
			<div class="col-md-2"></div>
			<div class="col-md-8">
				<div class="white_shd full">
					<div class="full price_table padding_infor_info">
						<div class="row">
							<div class="col-lg-12">
								<div class="full inner_elements">
									<div class="tab_style2">
										<div class="tabbar">
											<nav>
												<div class="nav nav-tabs" id="nav-tab" role="tablist">
													<a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#recent_activity" role="tab" aria-selected="true">Yorumunu Güncelle</a>
												</div>
											</nav>

											<form method="post" asp-action="EditComment" asp-controller="Comment">
												<input type="hidden" asp-for="CommentId" />
												<input type="hidden" asp-for="AppUserId" />
												<div class="tab-content" id="nav-tabContent">
													<div class="tab-pane fade show active" id="recent_activity" role="tabpanel" aria-labelledby="nav-home-tab">
														<div class="msg_list_main">
															<label>Blog Yazısı</label>
															<input type="text" asp-for="@Model.Article.Title" class="form-control" readonly />
															<br />
															<label>Yorumunuz</label>
															<textarea type="text" rows="5" cols="3" asp-for="Detail" class="form-control"></textarea>
															<br />
															<button type="submit" class="btn cur-p btn-success">Yorumu Güncelle</button>
														</div>
													</div>
												</div>
											</form>

										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-2"></div>
			</div>
		</div>
	</div>
</div>